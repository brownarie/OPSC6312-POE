<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".products">


    <Button
        android:id="@+id/backButton"
        android:layout_width="63dp"
        android:background="@drawable/baseline_keyboard_arrow_left_24"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#1C1D1D" />



    <TextView
        android:id="@+id/textViewlogin2"
        android:layout_width="153dp"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="8dp"
        android:paddingVertical="0dp"
        android:text="Clothes"
        android:textAlignment="gravity"
        android:textColor="#5F1065"
        android:textSize="30dp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/WigsName"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_marginBottom="10dp"
        android:background="#406EE9"
        android:padding="66dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:background="#6843D5"
            android:backgroundTint="#00BCD4"
            android:clickable="true"
            tools:ignore="Orientation">

            <ImageView
                android:id="@+id/Saniim"
                android:layout_width="135dp"
                android:layout_height="90dp"
                android:layout_marginVertical="29dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/SaniNamue"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="50dp"
                android:text="Wigs"
                android:textSize="19dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



        <!--  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/bagsName"
            android:layout_height="155dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:background="@color/cardview_light_background"
                android:backgroundTint="#9C27B0"


                android:clickable="true"
                android:padding="10dp"
                tools:ignore="Orientation">

                <ImageView
                    android:layout_width="116dp"
                    android:layout_height="90dp"
                    android:layout_marginVertical="29dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/cupsName"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:text="Luggage Bags"
                    android:textSize="19dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <!--  -->
        <androidx.cardview.widget.CardView
            android:id="@+id/DressNames"
            android:layout_width="match_parent"
            android:layout_height="155dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:background="#392476"
                android:backgroundTint="#03A9F4"
                tools:ignore="Orientation">

                <ImageView
                    android:id="@+id/tampsName"
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:layout_marginVertical="29dp"
                    android:layout_marginLeft="19sp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tamponName"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:text="Dress"
                    android:textSize="19sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


</LinearLayout>