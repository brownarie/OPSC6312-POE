<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dress">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/backgroundgradient"
        android:elevation="90dp"
        android:orientation="vertical"
        app:cornerRadius="299px">

        <ImageView
            android:layout_width="383dp"
            android:layout_height="337dp"
            android:layout_marginStart="14dp"
            android:contentDescription="TODO"


            >


        </ImageView>


       </LinearLayout>


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="97dp"
        android:layout_height="89dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/baseline_keyboard_arrow_left_24"
        android:contentDescription="@string/todo"
        android:padding="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="28sp"
        android:text="@string/dresses"
        android:textSize="30sp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="190dp"
        android:layout_height="66dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="33dp"
        android:text="@string/variety_range_of_dresses_for_different_shapes_and_sizes"
        android:textSize="14sp"
        android:textStyle="italic"/>

    <LinearLayout
        android:id="@+id/quantitySelector"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:padding="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnSm"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="135dp"
            android:layout_height="61dp"
            android:backgroundTint="#2196F3"
            android:elevation="55dp"
            android:text="@string/small2"
            android:textColor="#F8F6F4"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonMed"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="127dp"
            android:layout_height="64dp"
            android:backgroundTint="#9C27B0"
            android:gravity="center"
            android:text="Medium"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonLar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="115dp"
            android:layout_height="65dp"
            android:backgroundTint="#0AB9EF"
            android:gravity="center"
            android:text="@string/large1"
            android:textSize="16sp"
            android:textStyle="bold" />



    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

        <TextView
            android:id="@+id/pay"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="R250,00"
            android:textSize="28sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/cartDress"
            android:layout_width="12dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_add_shopping_cart_24"
            android:gravity="end"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>